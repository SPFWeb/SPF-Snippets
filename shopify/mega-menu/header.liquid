{% include 'main-navigation' %}
{% schema %}
  {
    "name": "Header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu_linklist",
        "label": "Menu",
		"default": "main-menu"
      },
      {
        "type": "header",
        "content": "Navigation"
      },
      {
        "type": "select",
        "id": "nav_alignment",
        "label": "Alignment",
        "options": [
          {
            "value": "center",
            "label": "Centered"
          },
          {
            "value": "left",
            "label": "Left-aligned"
          }
        ],
        "default": "left"
      },
      {
   "type":      "select",
   "id":        "columns",
   "label":     "How you want the menus to display",
   "options": [
     {
       "value": "dropdown-width-2",
       "label": "2 Columns"
     },
     {
      
       "value": "dropdown-boundary",
       "label": "3 Columns(Justified)"
     },
     {
      
       "value": "dropdown-boundary-4",
       "label": "4 Columns(Justified)"
     }
   ],
   "default":   "dropdown-width-2",
   "info":      "2 Columns Default"
},
      {
        "type": "checkbox",
        "id": "nav_show_images",
        "label": "Show collection images in dropdown navigation",
        "info": "Works only on desktop."
      },
      {
        "type": "header",
        "content": "Full width dropdown"
      },
      {
        "type": "text",
        "id": "nav_uber_name",
        "label": "Name of menu link to show under",
		"info": "This is case-sensitive"
      },
      {
        "type": "text",
        "id": "nav_uber_list_1_title",
        "label": "Column 1 heading"
      },
      {
        "type": "link_list",
        "id": "nav_uber_list_1",
        "label": "Column 1 menu"
      },
      {
        "type": "text",
        "id": "nav_uber_list_2_title",
        "label": "Column 2 heading"
      },
      {
        "type": "link_list",
        "id": "nav_uber_list_2",
        "label": "Column 2 menu"
      },
      {
        "type": "text",
        "id": "nav_uber_list_3_title",
        "label": "Column 3 heading"
      },
      {
        "type": "link_list",
        "id": "nav_uber_list_3",
        "label": "Column 3 menu"
      },
      {
        "type": "text",
        "id": "nav_uber_list_4_title",
        "label": "Column 4 heading"
      },
      {
        "type": "link_list",
        "id": "nav_uber_list_4",
        "label": "Column 4 menu"
      }
	]
  }
{% endschema %}
